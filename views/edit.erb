<div class="content">

  <h2>Edit pizza</h2>

  <form action="/pizza/<%= @pizza.id %>" method="post">
  <label for="first_name">First Name:</label>
  <input type="text" name="first_name" value=" <%= @pizza.first_name %>">
    <br>

    <label for="last_name">Last Name:</label>
    <input type="text" name="last_name" value= "<%= @pizza.last_name %>"><br>

    <label for="topping">Select a pizza:</label>
    <select name="topping">
      <option value="Margherita">Margherita</option>
      <option value="Calzone">Calzone</option>
    </select><br>


    <label for="quantity">Quantity:</label>
    <input type="number" name="quantity" value= "<%= @pizza.last_name %>"><br>

    <input type='submit' value="Update pizza">
  </form>

</div>